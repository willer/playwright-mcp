{
  "name": "@playwright/mcp",
  "version": "0.0.6",
  "description": "Playwright Tools for MCP",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/microsoft/playwright-mcp.git"
  },
  "homepage": "https://playwright.dev",
  "engines": {
    "node": ">=18"
  },
  "author": {
    "name": "Microsoft Corporation"
  },
  "license": "Apache-2.0",
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:code": "eslint \"src/**/*.ts\" --rule \"robust/code-quality:2\"",
    "lint:tests": "eslint \"tests/**/*.ts\" --rule \"robust/test-quality:2\"",
    "watch": "tsc --watch",
    "test": "playwright test",
    "test:quality": "playwright test tests/claude-quality-check.spec.ts",
    "clean": "rm -rf lib",
    "prepare": "npm run build",
    "install-hooks": "cp utils/pre-commit.js .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit",
    "npm-publish": "npm run clean && npm run build && npm run test && npm publish"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    }
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "commander": "^13.1.0",
    "node-fetch": "^3.3.2",
    "playwright": "1.52.0-alpha-1743011787000",
    "uuid": "^9.0.1",
    "zod-to-json-schema": "^3.24.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@playwright/test": "1.52.0-alpha-1743011787000",
    "@stylistic/eslint-plugin": "^3.0.1",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.26.1",
    "@typescript-eslint/parser": "^8.26.1",
    "@typescript-eslint/utils": "^8.26.1",
    "eslint": "^9.19.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-notice": "^1.0.0",
    "typescript": "^5.8.2"
  },
  "bin": {
    "mcp-server-playwright": "cli.js"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
